<div class="container">
  <div class="content">
    <div class="title-description-show">
      <div class="row">
        <div class="small-4 columns">
        #
        </div>
        <div class="small-8 columns">
          <div class="recipe-title-show">
            <h3><%= @recipe.title %></h3>
            <p><%= @recipe.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="content">
    <row>
      <div class="small-6 columns">
        <h3>Ingredients:</h3>
        <% @recipe.ingredients.each do |ingredient| %>
          <ul>
            <li><%= ingredient.name %></li>
          </ul>
        <% end %>
      </div>
      <div class="small-6 columns">
        <h3>Directions:</h3>
        <% @recipe.directions.each do |direction| %>
          <ul>
            <li><%= direction.step %></li>
          </ul>
        <% end %>
      </div>
    </row>
  </div>
</div>